<script>
(function () {
   
  var href = "{{Cookie - gtm_campaign_url}}";
  var cookies = new URL(href);
  cookies = new URLSearchParams(cookies.search);
  var utm_medium= cookies.get("utm_medium"); 
  var field = document.querySelector("input[name='Medium__c']")
  if(field){ field.value = utm_medium; }
  
  var utm_source= cookies.get("utm_source"); 
  field = document.querySelector("input[name='Source__c']")
  if(field){ field.value =utm_source; }
  
  var utm_campaign= cookies.get("utm_campaign"); 
  field = document.querySelector("input[name='Campaign__c']")
  if(field){ field.value =utm_campaign; }
  
  var utm_content= cookies.get("utm_content"); 
  field = document.querySelector("input[name='Content__c']")
  if(field){ field.value =utm_content; }
  
  var utm_term= cookies.get("utm_term"); 
  field = document.querySelector("input[name='Term__c']")
  if(field){ field.value =utm_term; }
  
})();
</script>
